{% extends "@c975LEmail/emails/layout.html.twig" %}
{% trans_default_domain 'contactForm' %}

{% block contactform_content %}
{# Explanation #}
    <p>
        {% trans with {
            '%senderName%': form.name,
            '%senderEmail%': form.email,
            '%sendTime%': 'now'|localizeddate('medium', 'medium', locale),
            '%site%': site
            } from 'contactForm' %}
            text.mail_following_sent
        {% endtrans %}
    </p>
{# Message sent #}
    <p>
        <strong>
            {{ 'label.message_sent'|trans }}
        </strong>
    </p>
    <hr />
    <blockquote>
        {{ form.message|nl2br|raw }}
    </blockquote>
{% endblock %}