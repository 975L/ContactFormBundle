{% extends "@c975LContactForm/layout.html.twig" %}
{% trans_default_domain 'contactForm' %}

{% set infoText = 'text.contact_info'|trans({'%site%': site}) %}
{# Override data depending on subject value #}
{#% if 'Subject' in subject %#}
    {#% set infoText = 'Another text' %#}
{#% endif %#}

{% block contactform_content %}
    <div>
        <p class="text-center">
            {{ infoText|raw }}
        </p>

        {{ form_start(form) }}
            {{ form_widget(form) }}

            <div class="form-group">
                <button type="submit" name="submit" title="{{ 'label.send'|trans }}" class="btn btn-lg btn-primary btn-block">
                    <span class="glyphicon glyphicon-send"></span> {{ 'label.send'|trans }}
                </button>
            </div>
        {{ form_end(form) }}
{# Mandatory field #}
        <p class="text-muted">
            <em>
                {{ 'label.mandatory_field'|trans }}
            </em>
        </p>
    </div>
{% endblock %}